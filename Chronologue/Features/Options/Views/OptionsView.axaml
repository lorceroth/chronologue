<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vm="using:Chronologue.Features.Options.Views"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:i="System.Windows.Interactivity"
  mc:Ignorable="d" d:DesignWidth="380" d:DesignHeight="595"
  x:Class="Chronologue.Features.Options.Views.OptionsView"
  x:DataType="vm:OptionsViewModel"
  Background="#252525">

  <Design.DataContext>
    <vm:OptionsViewModel />
  </Design.DataContext>

  <StackPanel Orientation="Vertical">
    <TextBlock
      FontSize="32"
      FontWeight="Bold"
      Text="Options"
      Margin="0,0,0,5" />
  </StackPanel>

</UserControl>
